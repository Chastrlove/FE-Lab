{
  "env": {
    "coreJs": 3,
    "targets": {
     "esmodules": true
    }
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "tsx": true,
      "decorators": true
    },
    "target": "es2015",
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "react":{
        "runtime":"automatic",
        "throwIfNamespace":true,
        "useBuiltins":true,
        "refresh": true
      }
    }
  }
}
